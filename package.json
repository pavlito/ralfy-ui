{
  "name": "ralfy-ui",
  "version": "1.1.0",
  "type": "module",
  "description": "Token-driven design system extracted from a production React application",
  "files": [
    "dist",
    "src/styles.css",
    "src/tokens/tokens.css",
    "src/tokens/generated"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens.js",
      "types": "./dist/tokens/index.d.ts"
    },
    "./tokens.css": "./src/tokens/tokens.css",
    "./styles.css": "./src/styles.css",
    "./generated/primitives.css": "./src/tokens/generated/primitives.css",
    "./generated/light.css": "./src/tokens/generated/light.css",
    "./generated/dark.css": "./src/tokens/generated/dark.css",
    "./package.json": "./package.json"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "tokens:build": "node sd.config.mjs",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "design-system",
    "react",
    "tailwind",
    "tokens",
    "oklch"
  ],
  "author": "Pavle Lucic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pavlito/ralfy-ui.git"
  },
  "packageManager": "pnpm@10.24.0",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@storybook/addon-a11y": "^10.2.10",
    "@storybook/addon-docs": "^10.2.10",
    "@storybook/addon-themes": "^10.2.10",
    "@storybook/addon-vitest": "^10.2.10",
    "@storybook/react-vite": "^10.2.10",
    "@storybook/test": "^8.6.15",
    "@tailwindcss/vite": "^4.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@tokens-studio/sd-transforms": "^2.0.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "chromatic": "^15.1.1",
    "colorjs.io": "^0.6.1",
    "eslint": "^10.0.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^28.1.0",
    "playwright": "^1.58.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "storybook": "^10.2.10",
    "style-dictionary": "^5.3.2",
    "tailwindcss": "^4.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
